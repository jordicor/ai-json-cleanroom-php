{
  "name": "jordicor/ai-json-cleanroom-php",
  "description": "Robust post-processing layer for AI-generated JSON outputs (PHP)",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "llm",
    "json",
    "validation",
    "ai",
    "openai",
    "anthropic",
    "claude",
    "gpt",
    "parsing",
    "repair",
    "post-processing",
    "structured-output"
  ],
  "homepage": "https://github.com/jordicor/ai-json-cleanroom-php",
  "require": {
    "php": ">=8.1",
    "ext-mbstring": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "files": [
      "ai_json_cleanroom.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "AIJsonCleanroom\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  },
  "support": {
    "issues": "https://github.com/jordicor/ai-json-cleanroom-php/issues",
    "source": "https://github.com/jordicor/ai-json-cleanroom-php"
  }
}
